<div class="container">
  <h1>Flats</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Address</th>
        <th scope="col">Price</th>
        <th scope="col">Capacity</th>
        <th scope="col">Available from</th>
        <th scope="col">Available until</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% cont = 1  %>
      <% @flats.each do |flat| %>
        <tr>
          <th scope="row"> <%= cont %></th>
          <td><%= flat.title %></td>
          <td><%= flat.address %></td>
          <td>$ <%= flat.price %></td>
          <td><%= flat.capacity %></td>
          <td><%= flat.available_start %></td>
          <td><%= flat.available_end %></td>
          <td><%= link_to edit_flat_path(flat) do %><i class="fa-solid fa-pen-to-square" style="margin: 5px"></i><% end %><%= link_to flats_path(flat), method: :delete, data: { confirm: 'Are you sure?' } do %><i class="fa-solid fa-trash" style="margin: 5px"></i><% end %></td>
          <% cont += 1 %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
