<div class="container w-50 shadow border p-3 mt-5">
  <h1 class="my-3" style="font-family: Circular, -apple-system, BlinkMacSystemFont, Roboto, Helvetica Neue, sans-serif;">Edit your flat</h1>
  <%= simple_form_for @flat do |f| %>
    <%= f.input :address, label: 'Address:' %>
    <%= f.input :price, label: 'Price' %>
    <%= f.input :capacity, label: 'Capacity' %>
    <%= f.input :title, label: 'Title' %>
    <%= f.input :description, label: 'Description' %>
    <%= f.input :available_start, label: 'Initial date the flat will be available for reservation', html5: true %>
    <%= f.input :available_end, label: 'Final date the flat will be available for reservation', html5: true %>
    <div class="container">
      <div class="row mb-3">
        <div class="col-sm">
          <%= cl_image_tag @flat.photos.first.key, height: 200, width: 200, crop: :fill, class:"img-fluid" %>
        </div>
        <div class="col-sm">
          <%= cl_image_tag @flat.photos.second.key, height: 200, width: 200, crop: :fill, class:"img-fluid" %>
        </div>
        <div class="col-sm">
          <%= cl_image_tag @flat.photos.last.key, height: 200, width: 200, crop: :fill, class:"img-fluid" %>
        </div>
      </div>
    </div>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <div class="d-grid gap-2 d-md-block">
      <%= f.button :submit, "Save Flat", class: 'btn btn-primary'%>
      <%= link_to 'Cancel', flats_path, class:'btn btn-outline-primary m-3'%>
    </div>
  <% end %>
</div>
