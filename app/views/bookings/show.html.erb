<div class="container w-50 shadow border p-4 mt-2 mb-5">
      <div class="container"> <!--CONTENEDOR DE LAS FOTOGRAFIAS-->
        <h1 class="my-3" style="font-family: Circular, -apple-system, BlinkMacSystemFont, Roboto, Helvetica Neue, sans-serif;">Booking  #<%= @booking.id %></h1>
        <h2 class="my-3" style="font-family: Circular, -apple-system, BlinkMacSystemFont, Roboto, Helvetica Neue, sans-serif;"><i class="fa-solid fa-house" style="color: rgb(243, 35, 156)"></i> <%= @booking.flat.title %></h2>
          <div class="row d-flex justify-content-center">
            <% @booking.flat.photos.first %>
                <div class="col-12">
                  <div>
                    <%= cl_image_tag @booking.flat.photos.first.key, class:"img-fluid", width: "100%" %>
                  </div>
                </div>
          </div>
          <div class="d-flex justify-content-between mt-3">
            <div>
            <h4 style="color: rgb(243, 35, 156)"><strong>Check-In</strong></h4>
            <%= @booking.check_in %>
            </div>
            <div>
            <h4 style="color: rgb(243, 35, 156)"><strong>Check-Out</strong></h4>
            <%= @booking.check_out %>
            </div>
          </div>
          <hr>
          <h3 class="mt-3"><strong>Description</strong></h3>
          <p><%= @booking.flat.description %></p>
          <hr>
          <h3 class="mt-3"><strong>Address</strong></h3>
          <p><%= @booking.flat.address %></p>
          <hr>
          <h3 class="mt-3"><strong>Guests</strong></h3>
          <p><%= @booking.flat.capacity %></p>
          <div class="d-grid gap-2">
            <button style="background-color: rgb(243, 35, 156); border: 2px solid rgb(243, 35, 156); border-radius: 10px"> <%= link_to 'Back', bookings_path, style:'color: white; text-decoration: none;' %></button>

          </div>

      </div>
      </div>
</div>

<%= link_to 'Back', bookings_path %> |
