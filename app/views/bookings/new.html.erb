<div class="container w-50 shadow border p-3 mt-5">
  <h1>New Booking</h1>

  <%= simple_form_for [@flat, @booking] do |f| %>
    <%= f.input :check_in, label: 'Choose an initial date for reservation:', html5: true%>
    <%= f.input :check_out, label: 'Choose an ending date for reservation:', html5: true%>
    <%= f.button :submit, "Create Booking", class: "btn btn-primary" %>
  <% end %>
</div>
